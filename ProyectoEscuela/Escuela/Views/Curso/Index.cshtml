@model IEnumerable<DataAccess.Model.Curso>

@{
    ViewBag.Title = "Index";
}

    <header style="background-color:moccasin !important" class="jumbotron jumbotron-fluid text-center">
        <h2>Curso</h2>
    </header>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td class="text-right">
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class="btn btn-warning"}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
